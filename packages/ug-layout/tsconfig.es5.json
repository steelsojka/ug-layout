{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist/es5",
    "declaration": true,
    "noUnusedLocals": false,
    "declarationDir": "dist/es5",
    "lib": [
      "ES2015",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/esdoc.ts"
  ]
}