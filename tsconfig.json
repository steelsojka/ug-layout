{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "types": [
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}